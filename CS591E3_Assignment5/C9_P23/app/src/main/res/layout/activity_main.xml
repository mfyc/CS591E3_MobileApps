<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.reda.c9_p23.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:name="com.example.reda.c9_p23.SliderControlFragment"
            android:id="@+id/Control"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            tools:layout="@layout/fragment_control"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <fragment
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:name="com.example.reda.c9_p23.DimmedFragment"
            android:id="@+id/fgDimmed"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            tools:layout="@layout/fragment_dimmed"/>
    </LinearLayout>
</LinearLayout>